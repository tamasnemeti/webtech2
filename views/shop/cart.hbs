<div class="container">
{{# if books }}
    <div class="row">
        <div class="card-body mx-auto" style="max-width: 800px;">
            <ul class="list-group">
                {{# each books }}
                    <li class="list-group-item" style="font-size: 16px">
                        <strong>{{ this.item.title }} - </strong>
                        <span class="badge badge-dark">{{ this.qty }}</span>
                        <span class="label label-success">{{ this.price}} Ft</span>
                        <a href="/remove/{{this.item._id}}" class="btn btn-danger float-right btn-sm" role="button">Eltávolítás</a>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
            <strong>Végösszeg: {{ totalPrice }} Ft</strong>
            <hr>
            <a href="/checkout" type="button" class="btn btn-success">Vásárlás</a>
        </div>
    </div>
{{else}}
    <div class="row">
        <div class="card-body mx-auto" style="max-width: 800px;">
            <h2>Az ön kosara jelenleg üres.</h2>
        </div>
    </div>
{{/if}}
</div>
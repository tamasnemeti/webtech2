<div class="container">
    <div class="row">
        {{# each books }}
            <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
                <div class="card">
                    <img class="card-img-top" src="{{ this.imagePath }}">
                    <div class="card-block">
                        <h4 class="card-title">{{ this.title }}</h4>
                        <div class="card-text">{{ this.description }}</div>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Szerző: {{ this.author }}</li>
                        <li class="list-group-item">Megjelenés éve: {{ this.year }}</li>
                        <li class="list-group-item">ISBN: {{ this.isbn }}</li>
                        <li class="list-group-item">Készleten: {{ this.stock }}</li>
                    </ul>
                    <div class="card-footer">
                        <small>Ár: {{ this.price }} Ft</small>
                        <a href="/to-cart/{{this._id}}" class="btn btn-outline-dark float-right btn-sm" role="button">Kosárba</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>
<div class="row">
    <div class="card-body mx-auto" style="max-width: 400px;">
        <h4 class="card-title mt-3 text-center">Felhasználói fiók létrehozása</h4>
        {{#if hasErrors}}
            <div class="alert alert-danger">
                {{# each messages }}
                    {{this}}
                {{/each}}
            </div>
        {{/if}}
        <form action="/user/signup" method="post">
            <div class="form-group input-group">
                <span class="input-group-text"><i class="fas fa-signature"></i></span>
                <input class="form-control" name="name" id="name" type="text" placeholder="Név">
            </div>
            <div class="form-group input-group">
                <span class="input-group-text"><i class="far fa-calendar"></i></span>
                <input class="form-control" name="age" id="age" type="number" placeholder="Kor">
            </div>
            <div class="form-group input-group">
                <span class="input-group-text"><i class="far fa-address-card"></i></span>
                <input class="form-control" name="address" id="address" type="text" placeholder="Levelezési cím">
            </div>
            <div class="form-group input-group">
                <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                <input class="form-control" name="email" id="email" type="email" placeholder="Email cím">
            </div>
            <div class="form-group input-group">
                <span class="input-group-text"><i class="fa fa-lock"></i></span>
                <input class="form-control" name="password" id="password" type="password" placeholder="Jelszó" >
            </div>
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <button type="submit" class="btn btn-outline-dark btn-block">Felhasználói fiók létrehozása</button>
        </form>
    </div>
</div>